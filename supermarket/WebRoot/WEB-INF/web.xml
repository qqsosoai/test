<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name></display-name>	
  <welcome-file-list>
    <welcome-file>Login.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.bdqn.market.web.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/doLogin</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>bill</servlet-name>
  	<servlet-class>com.bdqn.market.web.servlet.Bill.BillServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BillViewServlet</servlet-name>
    <servlet-class>com.bdqn.market.web.servlet.Bill.BillViewServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BillUpdate</servlet-name>
    <servlet-class>com.bdqn.market.web.servlet.Bill.BillUpdate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProviderServlet</servlet-name>
    <servlet-class>com.bdqn.market.web.servlet.provider.ProviderServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserSerlet</servlet-name>
    <servlet-class>com.bdqn.market.web.servlet.user.UserSerlet</servlet-class>
  </servlet>




  <servlet-mapping>
  	<servlet-name>bill</servlet-name>
  	<url-pattern>/Bill</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BillViewServlet</servlet-name>
    <url-pattern>/BillView</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BillUpdate</servlet-name>
    <url-pattern>/BillUpdate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProviderServlet</servlet-name>
    <url-pattern>/Provider</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserSerlet</servlet-name>
    <url-pattern>/User</url-pattern>
  </servlet-mapping>
  
  <filter>
  	<filter-name>encoding</filter-name>
  	<filter-class>com.bdqn.market.web.filter.EnCodingFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>encoding</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
  	<filter-name>session</filter-name>
  	<filter-class>com.bdqn.market.web.filter.SessionFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>session</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
  	<filter-name>power</filter-name>
  	<filter-class>com.bdqn.market.web.filter.PowerFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>power</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <error-page>
  	<error-code>404</error-code>
  	<location>/error404.jsp</location>
  </error-page>
  <error-page>
  	<error-code>500</error-code>
  	<location>/error500.jsp</location>
  </error-page>
</web-app>
